# Portainer Stack Environment Variables
# Copy this file to stack.env and update with your actual values

# Application Settings
NODE_ENV=production
PORT=3000

# EmailJS Configuration for Visitor Notifications
EMAILJS_SERVICE_ID=service_xxxxxx
EMAILJS_TEMPLATE_ID=template_visitor_xxxx
EMAILJS_CONTACT_TEMPLATE_ID=template_contact_xxxx
EMAILJS_PUBLIC_KEY=xxxxxxxxxxxxxx

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# API Configuration
API_URL=https://your-domain.com

# Debug Settings (set to false in production)
DEBUG_VISITOR_TRACKING=false

# Docker Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3